<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1>Save any kind of movies' list</h1>
  </div>
</div>

<div class="container">
  <h1>My lists</h1>
  <ul>
    <% @lists.each do |list| %>
      <div class="card-category" style="text-decoration: none; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), asset-url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <li><%= link_to list.name, list_path(list) %></li>
      </div>
    <% end %>
  </ul>
  <%= link_to "add a list", new_list_path %>
</div>
